{
  "main": "dist/index.js",
  "engines": {
    "node": "24"
  },
  "dependencies": {
    "@xdevplatform/xdk": "latest",
    "firebase-admin": "latest",
    "firebase-functions": "latest"
  },
  "devDependencies": {
    "@types/dotenv": "latest",
    "@types/node": "latest",
    "dotenv": "latest",
    "firebase-tools": "latest",
    "gts": "latest",
    "ts-node": "latest",
    "typescript": "latest"
  },
  "scripts": {
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",

    "pretest": "npm.cmd run compile || npm run compile",
    "posttest": "npm.cmd run lint || npm run lint",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "private": true
}
